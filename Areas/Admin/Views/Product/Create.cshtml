@using JuanWeb.Models
@model Product
<div class="container">
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Product Description</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Product Price</label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImgUrl">Product IMG</label>
            <input asp-for="ImgUrl" class="form-control">
            <span asp-validation-for="ImgUrl" style="color:red"></span>
        </div>

        <button type="submit" class="btn btn-primary" asp-action="Create">Submit</button>
    </form>
</div>
